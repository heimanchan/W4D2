<form action = "<%= cats_url %>" method = "post">
  <label for ="name"> Name:
    <input type = "text" name="cat[name]">
  </label>
  <br>
  <label for ="sex"> Sex:
    <input type = "radio" name="cat[sex]" value="M">M
    <input type = "radio" name="cat[sex]" value="F">F
  </label>
  <br>

  <label for ="color"> Color:
    <select name="cat[color]">
      <option disabled selected>-- Select a color --</option>
      <% Cat::COLORS.each do |color| %>
        <option value="<%= color%>"> <%= color%> </option> 
      <% end %>
    </select>
  </label>
  <br>
  
  <label for ="birth_date"> Birth Date:
    <input type = "date" name="cat[birth_date]">
  </label>
  <br>

  <label for ="description"> 
    Description: <br>
    <textarea rows="10" cols= "20" name="cat[description]"> </textarea>
  </label>
  <br>

  <input type="submit" value="Add Cat">
</form>